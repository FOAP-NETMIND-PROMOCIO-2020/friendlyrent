<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <%- include ("partials/head.ejs") %>

</head>
<body>
    <div class="container">
        <header class="text-center">
            <h1>Profile Page</h1>
            <a href="/logout" class="btn btn-light btn-sm">logout</a>

        </header>
        <hr>

        <div class="container">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h3><span class="fa fa-user"></span>Local</h3>
                        <p>
                            <strong>id</strong>: <%= user._id %> <br>
                            <strong>email</strong>: <%= user.local.email %> <br>
                            <strong>password</strong>: <%= user.local.password %> 
                        </p>
                        <a href="/logout" class="btn btn-light">Logout</a>
                    </div>
                </div> 
            </div>
        </div>
    </div>
    
    <!-- Mostrar Tablas perfil cliente y propietario-->
    <div class="container">
        <% if (isCustomer) { %>
        <div>
            <br>
            <hr>
            <h2>My history</h2>
            <p>List of rented apartments:</p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Apartment Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < apartmentCustomer.length; i++) { %>
                    <tr>
                        <td><%= apartmentCustomer[i].title %></td>
                        <td><%= apartmentCustomer[i].startDate %></td>
                        <td><%= apartmentCustomer[i].endDate %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <% } else if (isOwner) { %>

        <div>
            <br>
            <hr>
            <h2>My history</h2>
            <p>List of rented apartments:</p>
            <br>
            <% for (let i = 0; i < apartmentOwner.length; i++) { %>
            <h4><u><%= apartmentOwner[i].title %></u></h4>
            <br>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let x = 0; x < apartmentOwner[i].customerData.length; x++) { %>
                    <tr>
                        <td><%= apartmentOwner[i].customerData[x].userName %></td>
                        <td><%= apartmentOwner[i].customerData[x].startDate %></td>
                        <td><%= apartmentOwner[i].customerData[x].endDate %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <br>
            <% } %>
        </div>

        <% } %>

    </div>

</body>
</html>